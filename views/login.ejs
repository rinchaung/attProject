<%- include('partials/header') %>

<!-- Login Form -->
<link rel="stylesheet" href="../css/login.css">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <form class="form_color" action="/login" method="POST">
                <h2 style="color: #14a676;">Log <span style="color: #FEE996;">In</span></h2>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password"  class="form-control" name="password">
                </div>
                    <button type="submit" class="btn btn-outline-info">Login</button> <br>   
                    <p class="lg_form">Don't have account? <span><a href="/signup">SignUp</a></span></p>                          
            </form>
            <div>
                
            </div>
        </div>
    </div>
</div>

